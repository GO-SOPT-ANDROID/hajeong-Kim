<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="org.android.go.sopt.week1.presentation.profile.ProfileActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".week1.presentation.profile.ProfileActivity">

        <ImageView
            android:id="@+id/iv_profile_image"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@color/pink_pale" />

        <TextView
            android:id="@+id/tv_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="이름: "
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/iv_profile_image"
            app:layout_constraintTop_toBottomOf="@id/iv_profile_image" />

        <TextView
            android:id="@+id/tv_profile_get_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김하정"
            app:layout_constraintBottom_toBottomOf="@id/tv_profile_name"
            app:layout_constraintStart_toEndOf="@id/tv_profile_name"
            app:layout_constraintTop_toTopOf="@id/tv_profile_name" />

        <TextView
            android:id="@+id/tv_profile_talent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="특기: "
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/iv_profile_image"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_name" />

        <TextView
            android:id="@+id/tv_profile_get_talent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="밈 수집하기"
            app:layout_constraintBottom_toBottomOf="@id/tv_profile_talent"
            app:layout_constraintStart_toEndOf="@id/tv_profile_talent"
            app:layout_constraintTop_toTopOf="@id/tv_profile_talent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>